@{
    ArticleManagement.Areas.Admin.Models.UsersModel user = (ArticleManagement.Areas.Admin.Models.UsersModel)HttpContext.Current.Session["USER"];   
    
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/bootstrap-theme.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/admin/layout.css"/>
</head>
<body>
    <div class="container-fluid">
        <div class="row clearfix">
            <div id="sidebar-nav" class="col-lg-2">
                <div class="sidebar-nav">
                    <ul class="nav nav-list">
                        <!--<li class="nav-header">1st Navigation Header</li>-->
                        <li><img src="~/Content/photo.png" class="img-responsive" alt="Responsive image"><span style="padding:15px; font-size:16px; font-weight:bold; font-style:italic;" id="CurrentUser">@user.LastName @user.FirstName</span></li>
                        <li>@Html.ActionLink("អត្ថបទ","../../admin/articles")</li>
                        <li>@Html.ActionLink("ប្រភេទអត្ថបទ","../../admin/categories")</li>
                        <li>@Html.ActionLink("អ្នកប្រើប្រាស់","../../admin/users")</li>
                        <li>@Html.ActionLink("ចាកចេញ","../../admin/users/logout")</li>
                        <li>@Html.ActionLink("ទៅកាន់ទំព័រដើម","../../home/index")</li>
                    </ul>
                </div>
            </div>
        <div class="col-lg-10">
            @RenderSection("featured", required: false)
            <div class="row clearfix" id="content">
                @RenderBody()
            </div>
        </div>
    </div>
 </div>
 <!-- Full width with container-fluid -->
 
 
 
 <script type="text/javascript" src="~/Scripts/jquery-1.11.2.min.js"></script>
 <script type="text/javascript" src="~/ckeditor/ckeditor.js"></script>
 <script type="text/javascript" src="~/ckeditor/adapters/jquery.js"></script>
 <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
 <script type="text/javascript">
     $(function () {
         $("#CurrentUser").click(function () {
             location.href="/admin/users/details/@user.Id";
         });

         $(".ckeditor").ckeditor();
     });
        //CKEDITOR.replace('.ckeditor');
 </script>

 @RenderSection("Scripts", false)
    
</body>
</html>
