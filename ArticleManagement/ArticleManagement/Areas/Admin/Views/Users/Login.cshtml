@{
    ViewBag.Title = "Login";
    Layout="~/Areas/Admin/Views/Shared/_LayoutLogin.cshtml";
}

<form method="post" action="/admin/users/login">
    <div class="container-fluid">
        <div class="col-lg-offset-4 col-lg-4">
            <h2 style="text-align:center;">Login</h2>
            <div class="form-group">
            <label for="txtUsername">ឈ្មោះអ្នកប្រើប្រាស់</label>
            <input type="text" class="form-control" name="Username" id="txtUsername" placeholder="Username..." />
            </div>
            <div class="form-group">
                <label for="txtPassword">លេខសំងាត់</label>
                <input type="password" class="form-control" name="Password" id="txtPassword" placeholder="Password..." />
            </div>    
            <div class="row">
                <div class="col-lg-offset-6 col-lg-6" style="text-align:right;">
                    <button type="submit" class="btn btn-primary block" id="btnLogin">   Login  </button>
                </div>
            </div>
        </div>
    </div>
</form>
