<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @*@Styles.Render("~/Content/css")*@

    @Scripts.Render("~/bundles/modernizr")


    <!-- Custom Fonts -->
    <link href="font-awesome-4.1.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    @*<link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />*@
    <!-- Bootstrap Core CSS -->
    <link href="../../../Content/css/bootstrap.min.3.3.css" rel="stylesheet" />
    <link href="../../../Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="../../../Content/css/sb-admin.css" rel="stylesheet">

</head>
<body>
   
    <div id="wrapper">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="/Admin/Home/Index">KHMER DEMO</a>
            </div>

            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @Html.Encode(User.Identity.Name) <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li>
                            <a href="/Admin/Home/DetailProfile/"><i class="fa fa-fw fa-user"></i> Profile</a>
                        </li>
                        <li>
                            <a href="/Admin/Home/ChangePassword/"><i class="fa fa-fw fa-envelope"></i>Change Password</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="/Admin/Home/SignOut/"><i class="fa fa-fw fa-power-off"></i>Sign Out</a>
                        </li>
                    </ul>
                </li>
            </ul>

            <div class="collapse navbar-collapse navbar-ex1-collapse">
                <ul class="nav navbar-nav side-nav">
                    <li @ViewBag.Dashboard>
                        <a href="/Admin/Home/Index"><i class="fa fa-fw fa-dashboard"></i> Dashboard</a>
                    </li>
                    <li @ViewBag.UserMgr>
                        <a href="/Admin/User/Index"><i class="fa fa-fw fa-bar-chart-o"></i> User Management</a>
                    </li>
                    <li @ViewBag.CategoryMgr>
                        <a href="/Admin/Category/Index"><i class="fa fa-fw fa-table"></i> Category Management</a>
                    </li>
                    <li @ViewBag.ArticleMgr>
                        <a href="/Admin/Article/Index"><i class="fa fa-fw fa-edit"></i> Article Management</a>
                    </li>
                </ul>
            </div>
        </nav>

        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">
                            @ViewBag.PageTitle
                        </h1>
                        <ol class="breadcrumb">
                            <li>
                                <i class="fa fa-dashboard"></i>  <a href="/Admin/Home/Index">Dashboard</a>
                            </li>
                            <li class="active">
                                <i class="fa fa-edit"></i> @ViewBag.PageSubTitle
                            </li>
                        </ol>
                    </div>
                </div>

                @RenderBody()

            </div>
        </div>
    </div>

    <script src="../../../Content/js/jquery.js"></script>
    <script src="../../../Content/js/bootstrap.min.js"></script>
  
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    
</body>
</html>
